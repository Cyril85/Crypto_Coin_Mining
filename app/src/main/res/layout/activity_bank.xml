<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:shrinkMode="strict"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="milanroxe.inc.snocoins.bitcoin.bankActivity">


    <TextView
        android:id="@+id/textView20"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Please send funds to below bank Account"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="39dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="44dp"
        android:text="Bank Name:- \n ICICI Bank" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="42dp"
        android:text="Account Holder Name:- \n Milan sharma" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_below="@+id/textView29"
        android:layout_marginTop="47dp"
        android:text="Account Number:- \n 057501518630" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="IFSC Code:- \n ICIC0000575"
        android:layout_below="@+id/textView31"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView20"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignTop="@+id/textView29"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="Amount" />

    <TextView
        android:id="@+id/deposituamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:layout_alignBaseline="@+id/service_tax"
        android:layout_alignBottom="@+id/service_tax"
        android:layout_toRightOf="@+id/service_tax"
        android:layout_toEndOf="@+id/service_tax" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView37"
        android:layout_alignStart="@+id/textView37"
        android:layout_below="@+id/textView37"
        android:layout_marginTop="13dp"
        android:text="0" />

    <TextView
        android:id="@+id/service_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView34"
        android:layout_alignLeft="@+id/textView40"
        android:layout_alignStart="@+id/textView40"
        />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/deposituamount"
        android:layout_alignStart="@+id/deposituamount"
        android:layout_below="@+id/deposituamount"
        android:layout_marginTop="12dp"
        android:text="Total" />


    <Button
        android:id="@+id/updateref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape4"
        android:text="update reference no."
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView34"
        android:layout_alignRight="@+id/deposituamount"
        android:layout_alignEnd="@+id/deposituamount" />


</RelativeLayout>
