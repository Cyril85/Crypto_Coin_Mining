<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/shape"
    tools:context="milanroxe.inc.snocoins.bitcoin.BitcoinActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="SNO COINS AND BITCOIN EXCHANGE"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="italic" />

    </Toolbar>

    <TextView
        android:id="@+id/bitcoinbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <android.support.design.widget.BottomNavigationView

        android:id="@+id/bottomNavigationView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape2"
        design:menu="@menu/menu22"></android.support.design.widget.BottomNavigationView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="35dp"

        android:layout_marginRight="35dp"
        android:clickable="true"
        design:fabSize="normal"
        design:srcCompat="@drawable/history" />

    <LinearLayout
        android:id="@+id/buy_sell_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bitcoinbalance"
        android:background="@drawable/shape">


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:text="Buy:- "

            android:textColor="#eee"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/bitcoin_buy_rate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView13"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/textView13"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bitcoin_buy_rate_textview"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/bitcoinbalance"
            android:text="| Sell:- "
            android:textColor="#eee"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bitcoin_sell_rate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView16"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/textView16"
            android:text="TextView" />
    </LinearLayout>

    <!-- FIREBASE IMAGE IN CARD VIEW DISPLAY HERE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            card_view:cardCornerRadius="2dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--<ImageView-->
                    <!--android:id="@+id/ivFirebaseImage"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:clickable="true"-->
                    <!--android:src="@drawable/ic_dummy"-->
                    <!--android:scaleType="fitXY" />-->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>
