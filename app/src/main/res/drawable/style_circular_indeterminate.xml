<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:shape="oval"
        android:useLevel="false" >
        <gradient
            android:centerColor="#6794a3"
            android:centerY="0.5"
            android:endColor="#e2822d"
            android:startColor="#e2822d"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>