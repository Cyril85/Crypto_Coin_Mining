<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/secondaryProgress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="14.0"
                android:useLevel="true">
                <gradient
                    android:centerColor="#B7612A"
                    android:endColor="#B7612A"
                    android:startColor="#B7612A"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="13.0"
                android:useLevel="true">
                <gradient
                    android:centerColor="#ed7834"
                    android:endColor="#ed7834"
                    android:startColor="#ed7834"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

</layer-list>