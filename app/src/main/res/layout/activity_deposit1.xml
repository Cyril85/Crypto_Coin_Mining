<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:shrinkMode="strict"
    tools:context="milanroxe.inc.snocoins.bitcoin.deposit1Activity">

    <EditText
        android:id="@+id/entered_amount"
        android:background="@drawable/bg_buy_edit"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bank_button"
        android:background="@drawable/shape4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Deposit in Bank"
        android:gravity="center"
        android:layout_marginTop="76dp"
        android:textColor="@color/white"
        android:layout_below="@+id/textView52"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textSize="65dp"
        android:textColor="@color/color1fb184"
        android:text="0" />

    <TextView
        android:id="@+id/textView17"
        android:textColor="@color/color1fb184"
        android:textSize="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_toLeftOf="@+id/textView16"
        android:layout_toStartOf="@+id/textView16"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:text="(Minimium=2,000₹, Maximium=500,000₹)"
        android:layout_below="@+id/entered_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>
